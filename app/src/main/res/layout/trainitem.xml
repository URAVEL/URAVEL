<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/tv_startStation"
                android:layout_width="wrap_content"
                android:text="출발"
                android:layout_height="wrap_content"
                />
            <TextView

                android:layout_width="wrap_content"
                android:text="->"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_endStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_trainClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기차종류" />
            <TextView
                android:id="@+id/tv_departureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출발시간" />
            <TextView
                android:id="@+id/tv_arrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착시간" />


            <TextView
                android:id="@+id/tv_wasteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소요시간" />

            <TextView
                android:id="@+id/tv_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요금" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
