<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="제목" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="등급"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_tclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="등급"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="출발시간"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_tstime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="출발시간"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="도착시간"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_tdtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="도착시간"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소요시간"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_twtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소요시간"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="요금"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_tcost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="요금"
                        android:layout_weight="1"/>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <Button
                    android:id="@+id/btn_tsel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="선택"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>
